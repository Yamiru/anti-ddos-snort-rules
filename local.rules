alert icmp any any -> $HOME_NET any (msg:"ICMP Fragmentation Flood"; fragbits: M; sid:100003; rev:1;)
alert icmp any any -> $HOME_NET any (msg:"SMURF Attack Detected"; icmp_id: 1; sid:100004; rev:1;)

